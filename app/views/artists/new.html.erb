<h1>Add a Composer to our List</h1>

<%= form_for @artist do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :genre %>
  <%= f.select :genre,
      [["Classical", "Classical"],
      ["Renaissance", "Renaissance"],
      ["Baroque", "Baroque"],
      ["Romantic", "Romantic"]].sort,
        prompt: "Select Genre",
          class: "form-control" %>

  <%= f.label :nationality %>
  <%= f.select :nationality,
      [["Austrian", "Austrian"],
      ["German", "German"],
      ["French", "French"],
      ["Italian", "Italian"],
      ["Russian", "Russian"],
      ["Spanish", "Spanish"],
      ["Polish", "Polish"],
      ["Dutch", "Dutch"],
      ["English", "English"]].sort,
        prompt: "Select Nationality",
          class: "form-control" %>

  <%= f.submit "Compose" %>
<% end %>
